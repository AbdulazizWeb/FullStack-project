# ---------- Build stage ----------
FROM node:20-alpine AS build
WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .
RUN npm run build


# ---------- Run stage ----------
FROM node:20-alpine AS runner
WORKDIR /app

RUN npm i -g serve

COPY --from=build /app/dist ./dist

ENV NODE_ENV=production
EXPOSE 10000

CMD ["sh", "-c", "serve -s dist -l ${PORT:-10000}"]